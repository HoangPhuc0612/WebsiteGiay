@model WebsiteGiay.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<div class="col-12 col-md-8 col-lg-6 col-xl-5 m-auto">
    <div class="card bg-dark text-white" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                @*<p class="text-white-50 mb-5">Please enter your login and password!</p>*@
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="form-outline form-white mb-4">
                        @Html.TextBoxFor(row => row.UserName, new { placeholder = "Username", @class = "form-control form-control-lg" })
                        @*@Html.ValidationMessageFor(row => row.UserName)*@
                        @*@Html.LabelFor(row => row.UserName, new {@class="form-label"})*@
                    </div>

                    <div class="form-outline form-white mb-4">
                        @Html.PasswordFor(row => row.Password, new { placeholder = "Password", @class = "form-control form-control-lg" })
                        @*@Html.ValidationMessageFor(row => row.Password)*@
                        @*@Html.LabelFor(row => row.Password, new {@class="form-label"})*@
                    </div>
                    <div>
                        @Html.ValidationSummary()
                    </div>
                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                }


            </div>

            <div>
                <p class="mb-0">
                    Don't have an account? <a href="/Account/Register" class="text-white-50 fw-bold">Sign Up</a>
                </p>
            </div>

        </div>
    </div>
</div>

