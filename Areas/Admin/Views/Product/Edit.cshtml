@model WebsiteGiay.Models.Product
@{
    ViewBag.Title = "Edit";

}
<div class="form_container container-fluid">
    @using (Html.BeginForm("Edit", "Product", new {area="Admin"}, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="margin-bottom:10px;">

            @Html.TextBoxFor(row => row.ProductId, new { @class = "form-control", value = Model.ProductId, type="hidden" })
            <div class="col-md-6">
                @Html.LabelFor(row => row.ProductId, "Product Id")
                @Html.TextBoxFor(row => row.ProductId, new { @class = "form-control", value = Model.ProductId, disabled = "disabled" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.ProductName, "Product Name")
                @Html.TextBoxFor(row => row.ProductName, new { @class = "form-control", value = Model.ProductName })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.Price, "Price")
                @Html.TextBoxFor(row => row.Price, new { @class = "form-control", type = "number", value = Model.Price })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.Status, "Status")
                @Html.DropDownListFor(row => row.Status, new List<SelectListItem>
           {
                new SelectListItem{Text="In of stock",Value="In of stock"},
                new SelectListItem{Text="Out of stock",Value="Out of stock"}
           }, new { @class = "form-control" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.ImageURL, "Image URL")
                @Html.TextBox("ImageFile","ImageFile", new { @class = "form-control",type="file"})
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.BrandID, "Brand")
                @Html.DropDownListFor(row => row.BrandID, new SelectList(ViewBag.ListBrand, "BrandID", "BrandName"), new { @class = "form-control" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.CategoryID, "Category")
                @Html.DropDownListFor(row => row.CategoryID, new SelectList(ViewBag.ListCate, "CategoryID", "CategoryName"), new { @class = "form-control" })
            </div>

            <div class="col-md-6">
                @Html.LabelFor(row => row.Gender, "Gender")
                @Html.DropDownListFor(row => row.Gender, new List<SelectListItem>
            {
                new SelectListItem{Text="Unisex",Value="Unisex"},
                new SelectListItem{Text="Male",Value="Male"},
                new SelectListItem{Text="Female",Value="Female"}
            }, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(row => row.Size, "Size")
                @Html.TextBoxFor(row => row.Size, new { @class = "form-control", value = Model.Size })
            </div>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Admin/Product" class="btn btn-danger">Cancel</a>
    }
</div>
